<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.design4nature.experimentvxtablet.GameActivity">

    <Button
        android:id="@+id/btn_end_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="endGame"
        android:text="End game"
        />

    <TextView
        android:id="@+id/tv_team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Team1"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/tv_team2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team1"
        android:layout_margin="10dp"
        android:text="Team2"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/tv_team3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team2"
        android:layout_margin="10dp"
        android:text="Team3"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/tv_team4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team3"
        android:layout_margin="10dp"
        android:text="Team4"
        android:textSize="50sp"/>

    <LinearLayout
        android:id="@+id/ll_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_end_game"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="250dp"
        android:orientation="horizontal"/>

</RelativeLayout>
